@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Dodaj kategorię</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name">Nazwa</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">Pole obowiązkowe</span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Kolejność</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger">Pole obowiązkowe</span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Dodaj</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Powrót do listy</a>
    </div>

</form>

@section Scripts {
    {
        <partial name="_ValidationScriptsPartial" />
    }     
}
